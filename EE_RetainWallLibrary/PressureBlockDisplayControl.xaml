<UserControl x:Class="EE_RetainWallLibrary.PressureBlockDisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="8" Margin="5">
        <StackPanel>
            <TextBlock Text="{Binding Name}" 
                       FontWeight="Bold" 
                       FontSize="14" 
                       Margin="0,0,0,6"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="P1:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Pressure1, StringFormat={}{0:F0} psf}" Margin="5,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="P2:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Pressure2, StringFormat={}{0:F0} psf}" Margin="5,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Distance:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Distance, StringFormat={}{0:F2} ft}" Margin="5,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Location:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Location, StringFormat={}{0:F2} ft from ref}" Margin="5,0,0,0"/>
            </StackPanel>

            <Separator Margin="0,5"/>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Resultant Force:" FontWeight="Bold"/>
                <TextBlock Text="{Binding ForcePerFt, StringFormat={}{0:F0} lbs/ft}" Margin="5,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Centroid:" FontWeight="Bold"/>
                <TextBlock Text="{Binding Centroid, StringFormat={}{0:F2} ft from ref}" Margin="5,0,0,0"/>
            </StackPanel>

        </StackPanel>
    </Border>
</UserControl>
